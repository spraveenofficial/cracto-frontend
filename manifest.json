{
  "manifest_version": 3,
  "name": "Website Highlight Saver",
  "version": "1.0.1",
  "description": "Save and manage text highlights from any webpage with AI summarization",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Website Highlight Saver"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
